<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="root_layout_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BottomSheetDialog.MapZ" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.MapZ</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomSheet.MapZ" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_radius_20dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="common_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/common_elevation</item>
    </style>

    <style name="write_tool">
        <item name="android:layout_width">@dimen/common_icon_size</item>
        <item name="android:layout_height">@dimen/common_icon_size</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/common_elevation</item>
    </style>

    <style name="write_tool_color_select">
        <item name="android:layout_width">@dimen/write_tool_color_select_size</item>
        <item name="android:layout_height">@dimen/write_tool_color_select_size</item>
        <item name="android:layout_marginStart">@dimen/space_large</item>
        <item name="android:src">@drawable/ic_write_tool_color_select</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="write_tool_detail_page">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/bg_round</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>
</resources>
