<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MapZ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/map_z_red_500</item>
        <item name="colorPrimaryVariant">@color/map_z_red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/map_z_blue_200</item>
        <item name="colorSecondaryVariant">@color/map_z_blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MapZ.Button.Default" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_rectangle_round_outlined</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">@dimen/space_xx_small</item>
        <item name="android:padding">@dimen/space_median</item>
    </style>
</resources>
