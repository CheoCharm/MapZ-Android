<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MapZ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/map_z_red_500</item>
        <item name="colorPrimaryVariant">@color/map_z_red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/map_z_blue_200</item>
        <item name="colorSecondaryVariant">@color/map_z_blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog.MapZ</item>
    </style>

    <style name="Theme.MapZ.Button.Default" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_outlined_radius_100dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:elevation">@dimen/space_xx_small</item>
        <item name="android:padding">@dimen/space_median</item>
    </style>

    <style name="Theme.MapZ.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_radius_100dp</item>
        <item name="android:backgroundTint">@color/gray_extra_300</item>
        <item name="android:padding">@dimen/space_median</item>
        <item name="android:textColorHint">@color/gray_extra_600</item>
    </style>

    <style name="Theme.MapZ.EditText.Search" parent="Widget.AppCompat.EditText">
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:backgroundTint">@color/grey_dark</item>
        <item name="android:drawableTint">@color/grey_dark</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
    </style>

    <style name="Theme.MapZ.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/switch_track</item>
    </style>
</resources>
