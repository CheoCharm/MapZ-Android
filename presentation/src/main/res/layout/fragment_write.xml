<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.cheocharm.presentation.model.TextColor" />

        <variable
            name="viewmodel"
            type="com.cheocharm.presentation.ui.write.WriteViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/root_layout_default"
        tools:context=".ui.write.WriteFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_write_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/space_median" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_write_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/space_median" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_write"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/menu_base"
            app:title="@string/write_title"
            style="@style/common_toolbar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_write_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_median"
            android:text="@string/common_title"
            android:textSize="@dimen/text_s_large"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/guideline_write_end"
            app:layout_constraintStart_toEndOf="@id/guideline_write_start"
            app:layout_constraintTop_toBottomOf="@id/toolbar_write" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_write_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_x_small"
            android:background="@null"
            android:textSize="@dimen/text_s_large"
            android:hint="@string/write_title_hint"
            android:maxLength="20"
            app:layout_constraintEnd_toStartOf="@id/guideline_write_end"
            app:layout_constraintStart_toStartOf="@id/guideline_write_start"
            app:layout_constraintTop_toBottomOf="@id/tv_write_title" />

        <View
            android:id="@+id/view_write_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_divider_height"
            android:layout_marginTop="@dimen/space_small"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/et_write_title"
            app:layout_constraintStart_toEndOf="@id/guideline_write_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_write_end" />

        <View
            android:id="@+id/view_write_tools_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/write_tools_height"
            android:background="@color/white"
            android:elevation="@dimen/common_elevation"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_write_color"
            style="@style/write_tool"
            android:layout_marginStart="@dimen/space_large"
            android:src="@drawable/ic_write_tool_color"
            app:layout_constraintBottom_toBottomOf="@id/view_write_tools_background"
            app:layout_constraintEnd_toStartOf="@id/btn_write_font"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_write_tools_background" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_write_font"
            style="@style/write_tool"
            android:src="@drawable/ic_write_tool_font"
            app:layout_constraintBottom_toBottomOf="@id/view_write_tools_background"
            app:layout_constraintEnd_toStartOf="@id/btn_write_align"
            app:layout_constraintStart_toEndOf="@id/btn_write_color"
            app:layout_constraintTop_toTopOf="@id/view_write_tools_background" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_write_align"
            style="@style/write_tool"
            android:src="@drawable/ic_write_tool_align_left"
            app:layout_constraintBottom_toBottomOf="@id/view_write_tools_background"
            app:layout_constraintEnd_toStartOf="@id/btn_write_bold"
            app:layout_constraintStart_toEndOf="@id/btn_write_font"
            app:layout_constraintTop_toTopOf="@id/view_write_tools_background" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_write_bold"
            style="@style/write_tool"
            android:src="@drawable/ic_write_tool_bold"
            app:layout_constraintBottom_toBottomOf="@id/view_write_tools_background"
            app:layout_constraintEnd_toStartOf="@id/btn_write_underline"
            app:layout_constraintStart_toEndOf="@id/btn_write_align"
            app:layout_constraintTop_toTopOf="@id/view_write_tools_background" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_write_underline"
            style="@style/write_tool"
            android:src="@drawable/ic_write_tool_underline"
            app:layout_constraintBottom_toBottomOf="@id/view_write_tools_background"
            app:layout_constraintEnd_toStartOf="@id/btn_write_emoticon"
            app:layout_constraintStart_toEndOf="@id/btn_write_bold"
            app:layout_constraintTop_toTopOf="@id/view_write_tools_background" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_write_emoticon"
            style="@style/write_tool"
            android:src="@drawable/ic_write_tool_sticker"
            app:layout_constraintBottom_toBottomOf="@id/view_write_tools_background"
            app:layout_constraintEnd_toStartOf="@id/btn_write_picture"
            app:layout_constraintStart_toEndOf="@id/btn_write_underline"
            app:layout_constraintTop_toTopOf="@id/view_write_tools_background" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_write_picture"
            style="@style/write_tool"
            android:layout_marginEnd="@dimen/space_large"
            android:src="@drawable/ic_write_tool_image"
            app:layout_constraintBottom_toBottomOf="@id/view_write_tools_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_write_emoticon"
            app:layout_constraintTop_toTopOf="@id/view_write_tools_background" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_write_color_close"
            android:layout_width="@dimen/write_tool_close_btn_size"
            android:layout_height="@dimen/write_tool_close_btn_size"
            android:layout_marginStart="@dimen/space_median"
            android:elevation="@dimen/common_elevation"
            android:src="@drawable/ic_write_tool_color_close"
            app:layout_constraintBottom_toBottomOf="@id/view_write_tools_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_write_tools_background" />

        <HorizontalScrollView
            android:id="@+id/container_write_tool_color"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/space_median"
            android:elevation="@dimen/common_elevation"
            app:layout_constraintTop_toTopOf="@id/view_write_tools_background"
            app:layout_constraintBottom_toBottomOf="@id/view_write_tools_background"
            app:layout_constraintStart_toEndOf="@id/btn_write_color_close"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_write_color_red"
                    style="@style/write_tool_color_select"
                    android:layout_marginStart="@dimen/space_x_small"
                    android:tint="@color/write_tool_color_red"
                    android:onClick="@{() -> viewmodel.setTextColor(TextColor.Red)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_write_color_orange"
                    style="@style/write_tool_color_select"
                    android:tint="@color/write_tool_color_orange"
                    android:onClick="@{() -> viewmodel.setTextColor(TextColor.Orange)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_write_color_red"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_write_color_yellow"
                    style="@style/write_tool_color_select"
                    android:tint="@color/write_tool_color_yellow"
                    android:onClick="@{() -> viewmodel.setTextColor(TextColor.Yellow)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_write_color_orange"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_write_color_green"
                    style="@style/write_tool_color_select"
                    android:tint="@color/write_tool_color_green"
                    android:onClick="@{() -> viewmodel.setTextColor(TextColor.Green)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_write_color_yellow"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_write_color_sky_blue"
                    style="@style/write_tool_color_select"
                    android:tint="@color/write_tool_color_sky"
                    android:onClick="@{() -> viewmodel.setTextColor(TextColor.Sky)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_write_color_green"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_write_color_blue"
                    style="@style/write_tool_color_select"
                    android:tint="@color/write_tool_color_blue"
                    android:onClick="@{() -> viewmodel.setTextColor(TextColor.Blue)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_write_color_sky_blue"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_write_color_violet"
                    style="@style/write_tool_color_select"
                    android:layout_marginEnd="@dimen/space_x_small"
                    android:tint="@color/write_tool_color_violet"
                    android:onClick="@{() -> viewmodel.setTextColor(TextColor.Violet)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_write_color_blue"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

        <include
            android:id="@+id/write_font_detail"
            layout="@layout/write_tool_detail"
            android:layout_width="@dimen/write_tool_detail_width"
            android:layout_height="wrap_content"
            style="@style/write_tool_detail"
            android:layout_marginBottom="10dp"
            app:title="@{viewmodel.page.title}"
            app:page="@{viewmodel.page.id}"
            app:layout_constraintBottom_toTopOf="@id/view_write_tools_background"
            app:layout_constraintStart_toStartOf="@id/btn_write_font"
            app:layout_constraintEnd_toEndOf="@id/btn_write_font" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_write_tools"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:constraint_referenced_ids="btn_write_color, btn_write_font, btn_write_align, btn_write_bold, btn_write_underline, btn_write_emoticon, btn_write_picture" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_write_tool_color"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:constraint_referenced_ids="btn_write_color_close, container_write_tool_color" />

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/editor_write"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/space_median"
            app:layout_constraintBottom_toTopOf="@id/view_write_tools_background"
            app:layout_constraintTop_toBottomOf="@id/view_write_line"
            app:layout_constraintStart_toEndOf="@id/guideline_write_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_write_end" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/write_picture_list_height"
            android:background="@color/write_picture_list_background"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/view_write_tools_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
