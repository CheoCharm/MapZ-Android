<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.cheocharm.presentation.ui.group.GroupCreateViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.group.GroupCreateFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_group_create"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/menu_location"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/group_create_title" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_group_create_group"
            android:layout_width="@dimen/group_create_image"
            android:layout_height="@dimen/group_create_image"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/grey_02"
            app:layout_constraintBottom_toTopOf="@id/et_group_create_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_group_create"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_group_create_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_camera"
            android:backgroundTint="@color/grey_04"
            app:layout_constraintBottom_toTopOf="@id/tv_group_create_image"
            app:layout_constraintEnd_toEndOf="@id/iv_group_create_group"
            app:layout_constraintStart_toStartOf="@id/iv_group_create_group"
            app:layout_constraintTop_toTopOf="@id/iv_group_create_group"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_group_create_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_create_image"
            android:textColor="@color/grey_04"
            app:layout_constraintBottom_toBottomOf="@id/iv_group_create_group"
            app:layout_constraintEnd_toEndOf="@id/iv_group_create_group"
            app:layout_constraintStart_toStartOf="@id/iv_group_create_group"
            app:layout_constraintTop_toBottomOf="@id/iv_group_create_image" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_group_create_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_x_large"
            android:background="@null"
            android:hint="@string/group_create_group_hint"
            android:textAlignment="center"
            android:textColorHint="@color/grey_04"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textSize="@dimen/text_x_large"
            app:layout_constraintBottom_toTopOf="@id/et_group_create_bio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_group_create_group" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_group_create_bio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_large"
            android:layout_marginTop="@dimen/space_small"
            android:background="@drawable/bg_outlined_radius_10dp"
            android:elevation="@dimen/group_create_bio_elevation"
            android:hint="@string/group_create_group_bio_hint"
            android:maxLength="50"
            android:paddingHorizontal="@dimen/space_x_large"
            android:paddingVertical="@dimen/space_xx_large"
            android:textColorHint="@color/grey_04"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textSize="@dimen/text_median"
            app:layout_constraintBottom_toTopOf="@id/tv_group_create_search_block"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_group_create_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_group_create_search_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_create_search_block"
            android:textColor="@color/black"
            android:textSize="@dimen/text_median"
            app:layout_constraintBottom_toTopOf="@id/tv_group_create_search_block_description"
            app:layout_constraintStart_toStartOf="@id/et_group_create_bio" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_group_create"
            style="@style/Theme.MapZ.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={viewmodel.isSearchEnabled}"
            app:layout_constraintBottom_toBottomOf="@id/tv_group_create_search_block"
            app:layout_constraintEnd_toEndOf="@id/et_group_create_bio"
            app:layout_constraintTop_toTopOf="@id/tv_group_create_search_block" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_group_create_search_block_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xx_large"
            android:text="@string/group_create_search_block_description"
            android:textColor="@color/grey_04"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_group_create_search_block"
            app:layout_constraintVertical_chainStyle="packed" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
